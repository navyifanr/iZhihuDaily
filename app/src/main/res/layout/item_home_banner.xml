<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/rl_home_banner"
    android:background="#1fdcdcdc"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_home_banner_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9743f2"
        android:layout_marginBottom="@dimen/spacing_tiny"
        />

    <LinearLayout
        android:id="@+id/ll_home_banner_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/tv_home_banner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_home_banner_dots"
        android:text="我是标题"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_big"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/spacing_small"
        />

</RelativeLayout>