<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/spacing_small"
    android:background="@drawable/circle_coner_gray"
    >

    <ImageView
        android:id="@+id/iv_home_news_img"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_normal"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tv_home_news_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_home_news_img"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_margin="@dimen/spacing_normal"
        android:lineSpacingExtra="@dimen/spacing_tiny"
        android:textSize="@dimen/font_size_big_x"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:text="this is a test, this is a test, this is a test, this is a test, this is a test, this is a test,this is a test, this is a test, this is a test, this is a test, this is a test,  "
        />

</RelativeLayout>
